{
  "name": "ameendababat_homepage",
  "version": "1.0.0",
  "description": "Ameendababat Personal Homepage",
  "main": "index.js",
  
  "scripts": {
    "build:css": "sass src/scss/main.scss dist/css/main.css --no-source-map --style=expanded",
    "build:html": "cpx \"src/*.html\" dist/",
    "build:img": "cpx \"src/img/**/*\" dist/img",
    "build": "npm run build:css && npm run build:html && npm run build:img",
    "watch": "sass --watch src/scss/main.scss dist/css/main.css --no-source-map --style=expanded",
    "preview": "serve dist",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "author": "Ameen Dababat",
  "license": "ISC",
  "devDependencies": {
    "cpx": "^1.5.0",
    "gh-pages": "^6.3.0",
    "sass": "^1.94.0",
    "serve": "^14.2.5"
  }
}
